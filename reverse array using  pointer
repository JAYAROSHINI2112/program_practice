#include <stdio.h>

int main() {
   int i,j,arr[20],*ptr,n;
   printf("Enter the value of n  ");
   scanf("%d",&n);
   printf("\nEnter the values to be reversed  ");
   for(i=0;i<n;i++){
   scanf("%d",&arr[i]);
   }
   ptr=arr;
   printf("\nValues after Entered ");
   for(j=n-1;j>=0;j--)
   printf("%d ",*(ptr+j));
   return 0;
}
