#include<stdio.h>
#include<string.h>
int main()
{
    int i, j, k;
    char str[100];
    char rev[100];
    printf("Enter a string:\t");
    scanf("%[^\n]%*c", str);
    printf("The original string is %s\n", str);
    for(i = 0; str[i] !='\0'; i++);{
    }
    k=i-1;
    printf("The reverse string is ");
    for(j = k; str[j] != '\0'; j--)
    {
        printf("%c",str[j]);
    }
     return 0;
}
